<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
  <params>
    <power-source>/controls/lighting/taxi-light</power-source>
    <name>UfoLight</name>
    <r>0.5</r>
    <g>0.5</g>
    <b>0.5</b>
    <x-m/>
    <y-m/>
    <z-m/>
    <heading-deg/>
  </params>
  <!-- search lights -->
  <animation>
    <type>select</type>
    <object-name alias="/params/name"/>
    <condition>
      <property alias="/params/power-source"/>
    </condition>
  </animation>
  <light>
    <name alias="/params/name"/>
    <type>spot</type>
    <position>
      <x alias="/params/x-m"/>
      <y alias="/params/y-m"/>
      <z alias="/params/z-m"/>
    </position>
    <direction>
      <pitch-deg>62.1</pitch-deg>
      <roll-deg>0</roll-deg>
      <heading-deg alias="/params/heading-deg"/>
    </direction>
    <ambient>
      <r alias="/params/r"/>
      <g alias="/params/g"/>
      <b alias="/params/b"/>
      <a>1.0</a>
    </ambient>
    <diffuse>
      <r>1.0</r>
      <g>0.9</g>
      <b>0.7</b>
      <a>1.0</a>
    </diffuse>
    <specular>
      <r>0.99</r>
      <g>0.9</g>
      <b>0.7</b>
      <a>1.0</a>
    </specular>
    <debug-color>
      <r>0.5</r>
      <g>0</g>
      <b>1</b>
      <a>1.0</a>
    </debug-color>
    <attenuation>
      <c>1.0</c>
      <l>0.09</l>
      <q>0.0032</q>
    </attenuation>
    <spot-exponent>1</spot-exponent>
    <spot-cutoff>20.5</spot-cutoff>
    <range-m>50</range-m>
  </light>
</PropertyList>
