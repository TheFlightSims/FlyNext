<?xml version="1.0"?>
<PropertyList>

    <path>beacon_light.ac</path>
    <nopreview/>

    <effect>
        <inherits-from>procedural_light_beacon</inherits-from>
        <object-name>beacon_light</object-name>
    </effect>

    <animation>
        <type>scale</type>
        <x-offset>0.9</x-offset>
        <y-offset>0.9</y-offset>
        <z-offset>0.9</z-offset>
    </animation>

    <animation>
        <type>dist-scale</type>
        <object-name>beacon_light</object-name>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>1</dep>
            </entry>
            <entry>
                <ind>300</ind>
                <dep>4</dep>
            </entry>
            <entry>
                <ind>1500</ind>
                <dep>8</dep>
            </entry>
        </interpolation>
    </animation>

</PropertyList>
